extends ../layout

block content

	#header
		.container
			.row
				h1 Email to Users

	.container
		.form(class="animated fadeIn")
			form(method="post" action="/contact/send" )

				.field-wrap
					label Subject
					input(name="Subject" type='text', placeholder="New feature added")

				.field-wrap
					label Message
					textarea(name="Message" class="emailMsg" type='text', placeholder="New Update to Leafii")
				
				if error
					.field-wrap
						div(id="error" class="animated fadeIn")
							p= error

				input(type='submit' value="Submit")