extends layout

block content
	div(id="fb-root")
	script(type='text/javascript').
		(function(d, s, id) {
			var js, fjs = d.getElementsByTagName(s)[0];
			if (d.getElementById(id)) return;
			js = d.createElement(s); js.id = id;
			js.src = "//connect.facebook.net/en_US/sdk.js#xfbml=1&version=v2.6";
			fjs.parentNode.insertBefore(js, fjs);
		}(document, 'script', 'facebook-jssdk'));


	#landing
		div(class="container")
			.row
				img(src="/images/leafii.svg" class="animated bounceInDown") 
				h5(class="animated fadeIn") Online Portfolio Search Engine

		div(class="container animated fadeInUp")
			.row
				h6 Make your personal website visible.
				h6 Submit to get notified when platform is ready
				a(href="/auth/signup" class="signUpbtn")
					button Submit my Domain

		div(class="container")
			div(class="fb-like" data-href="https://www.facebook.com/getleafii" data-layout="standard" data-action="like" data-show-faces="true" data-share="true")
