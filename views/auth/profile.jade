extends ../layout

block content

	#header
		.container
			.row
				h1 User Profile

	div(class="profileSideMenu")
		nav(class="profile-menu-title") DashBoard
		nav(class="profile-menu-title") Edit Profile
		nav(class="profile-menu-title") Analytics
		nav(class="profile-menu-title") Log Out

	div(class="profilePanel")
		div(class="row userProfile")
			label Name: 
			input(type="text" name="firstName" value=user.firstName)
			input(type="text" name="lastName" value=user.lastName)
			label Email:
			input(type="text" name="email" value=user.email)
			label Password:
			input(type="text" name="password" value=user.password)
			label URL:
			input(type="text" name="url" value=user.url)
			input(type="hidden" name="id" value=user.id)
			label Location
			input(type="text" name="location" value=user.location)
			label Keywords
			textarea(type="text" name="keywords" value=user.keywords)
			label Last Modified: 5/20/2016
			input(type="submit" value="update")
